generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PageContent {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  page  String
  data  Section[]
}

type Section {
  content      ContentBlock?
  items        Item[]        // bisa kosong jika tidak digunakan
  hasTopBorder Boolean
}

type ContentBlock {
  title      String
  image      String?
  paragraphs String[]
}

type Item {
  src   String
  alt   String
  title String
  desc  String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String
  createdAt DateTime @default(now())
}

model Galeri {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  src    String
  alt    String
  createdAt DateTime @default(now())
}

model ArtikelContent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slug      String   @unique
  content   ParagraphBlock[]
  thumbnail String   // URL ke Cloudinary
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type ParagraphBlock {
  image      String?   // URL ke Cloudinary (opsional)
  paragraphs String[]  // paragraf isi
}

model Chart {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // 'pie' | 'bar' | 'line' | 'area'
  title     String
  data      Json     // [{ name: string, value: number }]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
